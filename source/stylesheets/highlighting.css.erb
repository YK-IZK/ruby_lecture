<%= Rouge::Themes::ThankfulEyes.render(:scope => '.highlight') %>

.highlight {
  width: 95%;
  margin: 0px auto 10px auto;
  border-radius: 0px 20px 0px 20px;
}

.highlight pre {
  padding: 2px;
  overflow-x: auto;
  white-space: pre;
  word-wrap: inherit;
}

.highlight pre td.rouge-gutter{
   background: none;
 }

.highlight pre .lineno{
   color: #fff;
 }

.highlight pre td.rouge-code span.n{
  color: #fff;
}

.highlight pre td.rouge-code span.nb{
  color: #40e363;
}

.file-name {
  width: 100px;
  text-align: center;
  margin-left: 60px;
  margin-bottom: 0px;
  border-radius: 10px 10px 0px 0px;
  background: #182B3A;
  color: #ffffff;
  font-size: 15px;
}
